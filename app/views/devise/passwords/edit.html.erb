            <a href='#' class='close' data-dismiss='alert' aria-label='close'>Ã—</a>
            <%= devise_error_messages! %>
         </div>
<%end%>
<nav class='navbar navbar-inverse'>
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <img class='navbar-brand img-circle' src = '/logo.jpeg' alt='logo' style='width:100px ; height:60px;padding: 2px 2px 2px 2px;'>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <h1 style='color:green; text-align:center;'>
      <strong>Welcome To Online Peer System</strong></h1>
    </div>
  </div>
</nav>
<div class= 'container-fluid img-responsive' style="background-image:url(/bg3.jpg); background-size: cover;height:658px; " >
  <div class='col-md-4 col-sm-4 col-xs-1'></div>
  <div class='col-md-4 col-sm-4 col-xs-10 text-center'>
    <div style="font-weight:90;padding:10px; background-color: white;box-shadow: 7px 7px 10px 10px #000; margin-top:20px;opacity: 0.8; "><br>
      <h2>Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name),class: 'form', html: { method: :put }) do |f| %>
        
        <%= f.hidden_field :reset_password_token %>

        <div class='form-group'>
          <%= f.label :password, 'New password' %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: 'off',class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :password_confirmation, 'Confirm new password' %><br />
          <%= f.password_field :password_confirmation, autocomplete: 'off',class: 'form-control' %>
        </div>

        <div class='actions'>
          <%= f.submit 'Change my password', class: 'btn btn-primary form-control' %>
        </div>
      <% end %>
      <div class ='link'>
        <%= render 'devise/shared/links' %>
      </div><br>
    </div>
  </div>
  <div class='col-md-4 col-sm-4 col-xs-1'></div>
</div>