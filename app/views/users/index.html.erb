<% if flash[:success] %>
  <div style="margin:0px 0px 0px 0px" class = 'alert alert-success alert-dismissable' >
    <a href='#' class='close' data-dismiss='alert' aria-label='close'>×</a>
    <%= flash[:success] %>
  </div>
<% elsif flash[:failure] %>
  <div style = "margin:0px 0px 0px 0px" class = 'alert alert-danger alert-dismissable' >
    <a href='#' class='close' data-dismiss='alert' aria-label='close'>×</a>
    <%= flash[:failure] %>
  </div>
<%end%>
