<%if can? :review_article, :assign %>
	<center>
		<% if flash[:success] %>
		  <div class = 'alert alert-success alert-dismissable' >
        <a href='#' class='close' data-dismiss='alert' aria-label='close'>×</a>
		    <%= flash[:success] %>
		  </div>
		<% elsif flash[:failure] %>
		  <div class = 'alert alert-danger alert-dismissable' >
        <a href='#' class='close' data-dismiss='alert' aria-label='close'>×</a>
		    <%= flash[:failure] %>
		  </div>
		<%end%>
		<body>
		  <div class= 'container'>
				<%= tinymce %>
				<h1 class=text-info>These are the Articles Assigned By Admin</h1>
				<div align='center'>
			    <%= paginate @articles %>
			  </div>
				<table class= 'table table-bordered table-hover'>
				  <th> Title</th>
				  <th>Description</th>
				  <th>Category</th>
				  <th colspan =3 >Actions</th>
				  <% @articles.each do|article| %>
					  <tr>
					    <td> <%= link_to review_articles(article.article_id).title, article_path(article.article_id) %></td>
					    <td><%= review_articles(article.article_id).description.html_safe %></td>
					    <td><%= review_articles(article.article_id).category %></td>
				      <% if can? :review_article1, article %>
					      <form  method='post' action = '<%=review_article1_path%>' >
					        <td colspan = 3>
					        <input name='authenticity_token' value='<%= form_authenticity_token %>' type='hidden' />
					        <%= hidden_field :assign, :article_id, value: article.article_id %>
					        <% if article.reviewer_status == 'accepted'%>
					          Already Accepted
					        <%elsif article.reviewer_status == 'rejected'%>
					          Already Rejected
					        <%else%>
						        <%= radio_button :assign, :reviewer_status, 'accepted'%>Accept  
						        <%= radio_button :assign, :reviewer_status, 'rejected'%>Reject
					          <input type='submit' value = 'Save Changes' class = 'btn btn-warning'>
					        <%end%>
					        </td>
					      </form>
					    <%end%>
				    </tr>
				  <%end%>
				</table>
				<div align='center'>
	        <%= paginate @articles %>
	      </div>
				<div style= 'font-size:30px'>
				 <%=link_with_icon('arrow-left', 'Back',root_path)%>
				</div>
			</div>
    </body>
	</center>				
<%end%>