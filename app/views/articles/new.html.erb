<center>
  <% if flash[:success] %>
    <div class = 'alert alert-success alert-dismissable' >
        <a href='#' class='close' data-dismiss='alert' aria-label='close'>×</a>
    <%= flash[:success] %>
    </div>
  <% elsif flash[:failure] %>
    <div class = 'alert alert-danger alert-dismissable' >
      <a href='#' class='close' data-dismiss='alert' aria-label='close'>×</a>
    <%= flash[:failure] %>
    <br>
      <% @article.errors.full_messages.each do |msg| %>
        <%= msg%>
        <br>
      <%end%>
    </div>
  <%end%>
  <body  style='background-color: #cccccc'>
    <%= tinymce %>
    <div class= 'container'>
      <h1 class=text-info >Enter Article Details</h1>
      <%= form_for @article do|f| %>
        <div class='form-group'>
          <%= f.label 'Title:' %>
          <%= f.text_field :title %>
        </div>
        
        <div class='form-group'>
          <%= f.label 'Category:' %>
          <%= f.select(:category, options_for_select(categories)) %>
          <%= f.hidden_field :user_id, :value=> current_user.id %>
        </div>

        <div class='row'>
          <div class= 'col-lg-6'>
              <div class='col-lg-2'>
                <%= f.label 'Description:' %>
              </div>
              <div class= 'col-lg-10'>
                <%= f.text_area :description, :class => 'tinymce'%>
              </div>
          </div>
          <div class= 'col-lg-6' >
              <div class= 'col-lg-2'>
                <%= f.label 'Content:' %>
              </div>
              <div class = 'col-lg-10'>
                <%= f.text_area :content, :class => 'tinymce' %>
              </div>
          </div>
        </div>
        <div class= 'row'>
          <div class= 'col-lg-2 col-lg-offset-4'>
            <%= f.label 'Upload CoverPhoto:'%>
          </div>
          <div class= 'col-lg-2'>
            <%= f.file_field :file%>
          </div>
        </div>
        <%= f.submit 'Create Article' , class: 'btn btn-success'%>
      <%end%>
      <div style= 'font-size:30px'>
       <%=link_with_icon('arrow-left', 'Back', root_path, method: :get)%>
      </div>
    </div>
  </body>
</center>