<body  style='background-color: #cccccc'>

	<div class ='main'>
		<div class='navbar1'>
		  <%=link_with_icon('arrow-left', 'Back', articles_path)%>
      <%=link_with_icon('check-square', 'Review Article', review_article_path)%>
			<%=link_with_icon(:download, 'Download Pdf', article_path(format:'pdf'))%>
			<%=link_with_icon(:home, 'Home', root_path)%>
		</div>
		<div class= 'row'>
		  <div class= 'col-lg-4' style= 'overflow:auto' >
		  <%= image_tag @article.file.url, class: 'img' if@article.file?%>
		  </div>
		  <div class= 'col-lg-8' style='float:left'>
			
				<div class = 'row'>
				  <div class ='col-lg-2'><strong>Title:&nbsp;&nbsp;</strong></div>
				  <div class ='col-lg-10'><%= @article.title%></div>
				</div>

				<div class = 'row'>
				  <div class ='col-lg-2'><strong>Category:&nbsp;&nbsp;</strong></div>
				  <div class ='col-lg-10'><%= @article.category%></div>
				</div>

		    <div class = 'row'>
				  <div class ='col-lg-2'><strong>Description:&nbsp;&nbsp;</strong></div>
				  <div class ='col-lg-10'><%=@article.description.html_safe%></div>
				</div>

				<div class ='row'>
				  <div class ='col-lg-2'><Strong>Content:&nbsp;&nbsp;</Strong></div>
				  <div class ='col-lg-10'><%=@article.content.html_safe%></div>
				</div>
	    </div>
	  </div>
  </div>
</body>